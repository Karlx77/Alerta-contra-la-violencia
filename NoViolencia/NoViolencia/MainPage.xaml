<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoViolencia.MainPage">

    <ContentPage.Content>
        <Grid>
            <Image Source="noviolencia.PNG" Aspect="AspectFill"/>
            <BoxView Color="#F8FCFC" Opacity="0.8"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Image Grid.Row="0" Source="logo.png" WidthRequest="160" HeightRequest="160" Margin="0,50,0,30"/>
                
                <StackLayout Grid.Row="1" Padding="30,20">
                    <Entry Placeholder="Numero telefónico" FontSize="Medium" />
                    <Button 
                        Text="Iniciar sesion"
                        BackgroundColor="#F592B0"
                        CornerRadius="20"
                        TextColor="White"
                        Clicked="OnButtonClicked"/>
                </StackLayout>

                <StackLayout Grid.Row="2" HorizontalOptions="Center" Margin="0,0,0,50">
                    <Label Text="Registrarse"/>
                </StackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>

</ContentPage>
